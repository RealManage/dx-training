{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -Iseconds) | PRE | BASH\" >> .claude/audit.log"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"$(date -Iseconds) | PRE | EDIT\" >> .claude/audit.log"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "dotnet build --verbosity quiet 2>/dev/null || echo 'Build may need attention'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": ["Read", "Edit", "Bash", "Glob", "Grep"],
    "deny": ["Bash(rm -rf *)", "Bash(git push --force*)"]
  }
}
